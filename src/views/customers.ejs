<%- include ('partials/_header')  %>

<div class="containter">
    <div class="row mt-5">
        <div class="col-md-7">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
              <th>Nro</th>
              <th>Nombre</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
              <% if (data) { %>
                <% for (var i = 0; i< data.length; i++) { %>
                  <tr>
                    <td><%= ( i + 1 ) %></td>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].address %></td>
                    <td><%= data[i].phone %></td>
                    <td>
                      <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                      <a href="/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                    </td>
                  </tr>
                <% } %>
              <% } %>  
            </tbody>
          </table>
        </div>            
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <fieldset>
                          <legend>
                              <div style="text-align: center;">
                                Nuevo Usuario
                            </div>
                          </legend>             
                          <div class="form-group">
                            <label for="exampleSelect1">Nombre</label>
                            <input type="text" name="name" placeholder="Name" class="form-control">
                          </div>                                        
                          <div class="form-group">
                            <label for="exampleTextarea">Direccion</label>
                            <input type="text" name="address" placeholder="Address" class="form-control">
                          </div>
                          <div class="form-group">
                            <label for="exampleTextarea">Telefono</label>
                            <input type="text" name="phone" placeholder="Phone" class="form-control">
                          </div>
                          <button type="submit" class="btn btn-primary">Guardar</button>                        
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer')  %>
  


